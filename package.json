{
  "name": "comparing",
  "version": "1.2.0",
  "description": "Easily create descriptive comparators",
  "keywords": [
    "typescript",
    "utility",
    "comparators",
    "collections",
    "lists",
    "sort",
    "sorting"
  ],
  "main": "dist/comparing.umd.js",
  "module": "dist/comparing.es5.js",
  "typings": "dist/types/comparing.d.ts",
  "files": [
    "dist"
  ],
  "author": "JanMalch",
  "repository": {
    "type": "git",
    "url": "https://www.github.com/JanMalch/comparing"
  },
  "homepage": "https://janmalch.github.io/comparing#readme",
  "bugs": {
    "url": "https://github.com/JanMalch/comparing/issues"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "lint": "tslint --project tsconfig.json",
    "prebuild": "rimraf dist docs",
    "build": "tsc --module commonjs && rollup -c rollup.config.ts",
    "docs": "typedoc --out docs --theme minimal --includeVersion --entryPoints src/comparing.ts",
    "postdocs": "node postdocs.js",
    "start": "rollup -c rollup.config.ts -w",
    "test": "jest --coverage",
    "test:prod": "npm run lint && npm run test -- --no-cache",
    "release": "standard-version",
    "prettier": "prettier --write {src,test}**/*.ts"
  },
  "sideEffects": false,
  "jest": {
    "transform": {
      ".ts": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "test\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverageFrom": [
      "src/**/*.ts"
    ]
  },
  "lint-staged": {
    "*.{json,md,yml}": [
      "prettier --write"
    ],
    "{src,test}/**/*.ts": [
      "prettier --write"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "standard-version": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "header": "",
    "types": [
      {
        "type": "feat",
        "section": "Features"
      },
      {
        "type": "fix",
        "section": "Bug Fixes"
      },
      {
        "type": "chore",
        "hidden": true
      },
      {
        "type": "docs",
        "hidden": true
      },
      {
        "type": "style",
        "hidden": true
      },
      {
        "type": "refactor",
        "section": "Code Refactoring"
      },
      {
        "type": "perf",
        "section": "Performance Improvements"
      },
      {
        "type": "test",
        "hidden": true
      },
      {
        "type": "build",
        "hidden": true
      }
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.34",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "jest-config": "^26.6.3",
    "lint-staged": "^10.5.4",
    "lodash.camelcase": "^4.3.0",
    "prettier": "^2.2.1",
    "prompt": "^1.1.0",
    "replace-in-file": "^6.2.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.41.2",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-typescript2": "^0.30.0",
    "standard-version": "^9.1.1",
    "ts-jest": "^26.5.3",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^9.0.0",
    "typedoc": "^0.20.30",
    "typescript": "^4.2.3"
  }
}
