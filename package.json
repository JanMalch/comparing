{
  "name": "comparing",
  "version": "1.0.0-rc.0",
  "description": "Easily create descriptive comparators",
  "keywords": [
    "typescript",
    "utility",
    "comparators",
    "collections",
    "lists",
    "sort",
    "sorting"
  ],
  "main": "dist/comparing.umd.js",
  "module": "dist/comparing.es5.js",
  "typings": "dist/types/comparing.d.ts",
  "files": [
    "dist"
  ],
  "author": "JanMalch",
  "repository": {
    "type": "git",
    "url": "https://www.github.com/JanMalch/comparing"
  },
  "homepage": "https://janmalch.github.io/comparing#readme",
  "bugs": {
    "url": "https://github.com/JanMalch/comparing/issues"
  },
  "license": "MIT",
  "engines": {
    "node": ">=6.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "lint": "tslint --project tsconfig.json",
    "prebuild": "rimraf dist docs",
    "build": "tsc --module commonjs && rollup -c rollup.config.ts",
    "docs": "typedoc --out docs --target es6 --theme minimal --mode file src",
    "postdocs": "node postdocs.js",
    "start": "rollup -c rollup.config.ts -w",
    "test": "jest --coverage",
    "test:prod": "npm run lint && npm run test -- --no-cache",
    "ci": "npm run test:prod && npm run build && npm run docs",
    "release": "standard-version",
    "prettier": "prettier --write **/*.ts"
  },
  "jest": {
    "transform": {
      ".ts": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "test\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverageFrom": [
      "src/**/*.ts"
    ]
  },
  "lint-staged": {
    "*.{json,md,yml}": [
      "prettier --write"
    ],
    "{src,test}/**/*.ts": [
      "prettier --write"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "standard-version": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "header": "",
    "types": [
      {
        "type": "feat",
        "section": "Features"
      },
      {
        "type": "fix",
        "section": "Bug Fixes"
      },
      {
        "type": "chore",
        "hidden": true
      },
      {
        "type": "docs",
        "hidden": true
      },
      {
        "type": "style",
        "hidden": true
      },
      {
        "type": "refactor",
        "section": "Code Refactoring"
      },
      {
        "type": "perf",
        "section": "Performance Improvements"
      },
      {
        "type": "test",
        "hidden": true
      },
      {
        "type": "build",
        "hidden": true
      }
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.2",
    "husky": "^4.3.0",
    "jest": "^26.6.1",
    "jest-config": "^26.6.1",
    "lint-staged": "^10.4.2",
    "lodash.camelcase": "^4.3.0",
    "prettier": "^2.1.2",
    "prompt": "^1.0.0",
    "replace-in-file": "^6.1.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.32.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-typescript2": "^0.28.0",
    "standard-version": "^9.0.0",
    "ts-jest": "^26.4.2",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^9.0.0",
    "typedoc": "^0.19.2",
    "typescript": "^4.0.3"
  }
}
